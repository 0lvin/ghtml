<Root>
		<commands>

			<cmd name="EditUndo" _label="_Undo" _tip="Undo the last action"
			pixtype="stock" pixname="Undo"/>

			<cmd name="EditRedo" _label="_Redo" _tip="Redo the undone action"
			pixtype="stock" pixname="Redo"/>

			<cmd name="EditCut" _label="C_ut" _tip="Cut the selection"
			pixtype="stock" pixname="Cut"/>
	
			<cmd name="EditCopy" _label="_Copy"
			_tip="Copy the selection" pixtype="stock" pixname="Copy"/>
	
			<cmd name="EditPaste" _label="_Paste"
			_tip="Paste the clipboard" pixtype="stock" pixname="Paste"/>
	
			<cmd name="EditFind" _label="_Find..." _tip="Find"
			pixtype="stock" pixname="Search"/>

			<cmd name="EditFindRegex"
			     _label="Find Rege_x..."
			     _tip="Find A Regular Expression"/>
	
			<cmd name="EditFindAgain" _label="Find _Again"
			_tip="Find again"
			pixtype="stock" pixname="Search"/>
	
			<cmd name="EditReplace" _label="_Replace..." _tip="Find and Replace"
			pixtype="stock" pixname="Search/Replace"/>

			<cmd name="EditProperties" _label="_Properties..." _tip="Modify the file's properties"
			pixtype="stock" pixname="Properties"/>

			<cmd name="InsertImage" _label="_Image..." _tip="Insert image into document..."/>
			<cmd name="InsertLink"  _label="_Link..." _tip="Insert HTML link into document..."/>
			<cmd name="InsertRule"  _label="_Rule..." _tip="Insert rule into document..."/>

		</commands>

	<menu>
		<submenu name="Edit" _label="_Edit">

		        <menuitem name="EditUndo" verb="" accel="*Ctrl*Z"/>
			<menuitem name="EditRedo" verb="" accel="*Ctrl*R"/>

			<separator/>

			<menuitem name="EditCut" verb="" accel="*Ctrl*X"/>
			<menuitem name="EditCopy" verb="" accel="*Ctrl*C"/>
			<menuitem name="EditPaste" verb="" accel="*Ctrl*V"/>
	
			<separator/>

			<menuitem name="EditFind" verb="" accel="*Ctrl*F"/>
			<menuitem name="EditFindRegex" verb="" accel="*Ctrl*E"/>
			<menuitem name="EditFindAgain" verb="" accel="*Ctrl*G"/>
			<menuitem name="EditReplace" verb="" accel="*Ctrl**Shift*F"/>

			<separator/>

			<menuitem name="EditProperties" verb=""/>
		</submenu>

                 
		<submenu name="Insert" _label="_Insert">
			<placeholder name="Component">
				<menuitem name="InsertImage" verb="" accel="*Ctrl**Alt*I"/>
				<menuitem name="InsertLink"  verb="" accel="*Ctrl**Alt*L"/>
				<menuitem name="InsertRule"  verb="" accel="*Ctrl**Alt*R"/>
			</placeholder>
		</submenu>
	</menu>
	<dockitem name="Toolbar">
		<toolitem name="EditUndo" verb="" _label="Undo" _tip="Undo previous changes"
		pixtype="stock" pixname="Undo"/>
		<toolitem name="EditRedo" verb="" _label="Redo"  _tip="Redo previously undone change"
		pixtype="stock" pixname="Redo"/>
		<separator/>
		<toolitem name="EditCut" verb=""  _label="Cut" _tip="Cut selection to clipboard"
		pixtype="stock" pixname="Cut"/>
                <toolitem name="EditCopy" verb=""  _label="Copy" _tip="Copy selection to clipboard"
		pixtype="stock" pixname="Copy"/>
		<toolitem name="EditPaste" verb=""  _label="Paste" _tip="Paste from clipboard"
		pixtype="stock" pixname="Paste"/>
		<separator/>
		<toolitem name="EditFind" verb=""  _label="Find" _tip="Find"
		pixtype="stock" pixname="Search"/>
		<toolitem name="EditReplace" verb=""  _label="Replace" _tip="Find And Replace"
		pixtype="stock" pixname="Search/Replace"/>
	</dockitem>
</Root>
