<Root>
	<menu>
		<submenu name="Edit" _label="_Edit">
		        <menuitem name="EditUndo" verb="" _label="_Undo" _descr="Undo the last action"
			pixtype="stock" pixname="Menu_Undo" accel="&lt;Control&gt;z"/>

			<menuitem name="EditRedo" verb="" _label="_Redo" _descr="Redo the undone action"
			pixtype="stock" pixname="Menu_Redo" accel="&lt;Control&gt;r"/>

			<menuitem/>

			<menuitem name="EditCut" verb="" _label="C_ut" _descr="Cut the selection"
			pixtype="stock" pixname="Menu_Cut" accel="&lt;Control&gt;x"/>
	
			<menuitem name="EditCopy" verb="" _label="_Copy"
			_descr="Copy the selection" pixtype="stock" pixname="Menu_Copy"
			accel="&lt;Control&gt;c"/>
	
			<menuitem name="EditPaste" verb="" _label="_Paste"
			_descr="Paste the clipboard" pixtype="stock" pixname="Menu_Paste"
