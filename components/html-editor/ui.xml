			<menuitem name="EditReplace" verb="" _label="_Replace..." _descr="Replace a string"
			pixtype="stock" pixname="Menu_Search/Replace" accel="F7"/>

			<menuitem/>

			<menuitem name="EditProperties" verb="" _label="_Properties..." _descr="Modify the file's properties"
			pixtype="stock" pixname="Menu_Properties"/>
		</submenu>
		<submenu name="Insert" _label="_Insert">
			<menuitem name="InsertImage" verb="" _label="_Image..." _descr="Insert image into document..."/>
			<menuitem name="InsertLink"  verb="" _label="_Link..." _descr="Insert HTML link into document..."/>
			<menuitem name="InsertRule"  verb="" _label="_Rule..." _descr="Insert rule into document..."/>
		</submenu>
	</menu>
